<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.carsalesplatform.controller.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Singin</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.LoginController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Singin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.UpdateCarServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.LogoutController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CarsServlet</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.CarListServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarsServlet</servlet-name>
        <url-pattern>/carslist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddSellerServlet</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.AddSellerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSellerServlet</servlet-name>
        <url-pattern>/addseller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCarServlet</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.AddCarServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoServlet</servlet-name>
        <url-pattern>/photo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PhotoServlet</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.PhotoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCarServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManufacturerServlet</servlet-name>
        <servlet-class>ru.job4j.carsalesplatform.controller.ManufacturerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManufacturerServlet</servlet-name>
        <url-pattern>/manufacturer</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>WEB-INF/views/CarsView.jsp</welcome-file>
    </welcome-file-list>
</web-app>
